{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Python: Remote Attach (API)",
      "type": "debugpy",
      "request": "attach",
      "connect": {
        "host": "localhost",
        "port": 5679
      },
      "pathMappings": [
        {
          "localRoot": "${workspaceFolder}/backend",
          "remoteRoot": "/app/backend"
        }
      ],
      "justMyCode": false,
      "presentation": {
        "group": "backend",
        "order": 1
      }
    },
    {
      "name": "Python: Remote Attach (Worker)",
      "type": "debugpy",
      "request": "attach",
      "connect": {
        "host": "localhost",
        "port": 5678
      },
      "pathMappings": [
        {
          "localRoot": "${workspaceFolder}/backend",
          "remoteRoot": "/app/backend"
        }
      ],
      "justMyCode": false,
      "presentation": {
        "group": "backend",
        "order": 2
      }
    },
    {
      "name": "Python: Current File",
      "type": "debugpy",
      "request": "launch",
      "program": "${file}",
      "console": "integratedTerminal",
      "cwd": "${workspaceFolder}",
      "env": {
        "PYTHONPATH": "${workspaceFolder}"
      },
      "presentation": {
        "group": "backend",
        "order": 3
      }
    },
    {
      "name": "Python: Pytest Current File",
      "type": "debugpy",
      "request": "launch",
      "module": "pytest",
      "args": [
        "${file}",
        "-v",
        "-s"
      ],
      "console": "integratedTerminal",
      "cwd": "${workspaceFolder}",
      "env": {
        "PYTHONPATH": "${workspaceFolder}"
      },
      "presentation": {
        "group": "testing",
        "order": 1
      }
    },
    {
      "name": "Python: Pytest All",
      "type": "debugpy",
      "request": "launch",
      "module": "pytest",
      "args": [
        "backend/tests",
        "-v"
      ],
      "console": "integratedTerminal",
      "cwd": "${workspaceFolder}",
      "env": {
        "PYTHONPATH": "${workspaceFolder}"
      },
      "presentation": {
        "group": "testing",
        "order": 2
      }
    }
  ],
  "compounds": [
    {
      "name": "Backend: API + Worker",
      "configurations": [
        "Python: Remote Attach (API)",
        "Python: Remote Attach (Worker)"
      ],
      "presentation": {
        "group": "backend",
        "order": 1
      }
    }
  ]
}
